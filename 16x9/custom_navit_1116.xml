<window id="1116">
	<defaultcontrol always="true">50</defaultcontrol>
	<!-- removed allowoverlay -->
	<views>50,500</views>
	<onunload>Skin.Reset(MediaSubMenuVisible2)</onunload>
	<controls>
        <!-- Background fading -->
        <control type="group">
            <include>Window_OpenClose_Animation_Zoom_Reverted</include>
            <include>CommonBackground</include>           
        </control>

        <!-- Bottom bar background(same transparency as Navit skin) -->
        <control type="group">
            <include>Window_OpenClose_Animation_Slide_Up</include>
            <control type="image">
				<posx>0</posx>
				<posy>45r</posy>
				<width>ScreenWidth</width>
				<height>50</height>
				<texture>black.png</texture>
				<colordiffuse>99000000</colordiffuse>
			</control>
        </control>

        <!-- Bottom bar song/radio info -->
        <control type="group">
            <posy>0</posy>
            <include>MusicPlayerTitleNavit</include>
            <include>RadioStationNameNavit</include>
		</control> 
        
	</controls>
</window>
